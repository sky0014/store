{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": "lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2015", "ES2017"],
    "downlevelIteration": true
  },
  "include": ["src/**/*"]
}
