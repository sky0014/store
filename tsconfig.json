{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ES5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": "lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2015", "ES2017", "DOM"],
    "downlevelIteration": true,
    "stripInternal": true,
    "jsx": "react"
  },
  "include": ["src"]
}
